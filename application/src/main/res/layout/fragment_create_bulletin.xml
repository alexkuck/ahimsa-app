<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.ahimsa.ahimsa_app.ui.CreateBulletinFragment">

    <TextView
        android:id="@+id/address_value"
        android:text="address"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/address_seperator"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#b0b0b0"
        android:layout_alignTop="@+id/address_value"
        android:layout_alignBottom="@+id/address_value"
        android:layout_toRightOf="@+id/address_value"
        />

    <TextView
        android:id="@+id/checksum_value"
        android:text="checksum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/address_seperator"
        android:layout_toRightOf="@+id/address_seperator"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="#00b0b0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="##"
        android:id="@+id/estimated_cost_value"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/est_conf_seperator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="/"
        android:id="@+id/est_conf_seperator"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/confirmed_balance_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="65dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="##"
        android:id="@+id/confirmed_balance_value"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="##"
        android:id="@+id/topic_count_value"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/msg_top_count_seperator" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="|"
        android:id="@+id/msg_top_count_seperator"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/message_count_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="###"
        android:id="@+id/message_count_value"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/topic_edit_text"
        android:hint="Topic"
        android:maxLength="15"
        android:singleLine="true"
        android:layout_below="@+id/address_value"
        android:layout_alignParentLeft="true"
        android:background="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#b0b0b0"
        android:layout_below="@+id/topic_edit_text"
        android:id="@+id/horizonal_line"
        ></View>



    <EditText
        android:id="@+id/message_edit_text"
        android:hint="Message"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:maxLength="500"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:layout_centerHorizontal="true"
        android:gravity="top|left"
        android:background="@null"

        android:layout_below="@+id/horizonal_line"/>




</RelativeLayout>
