<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dip"
    android:paddingRight="25dip"
    android:paddingTop="22dip"
    android:paddingBottom="22dip">

    <View
        android:id="@+id/center"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#b0b0b0"/>

    <TextView
        android:id="@+id/topic_value"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TopicTopicTopic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/message_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:layout_below="@+id/topic_value"
        android:paddingTop="1dip"
        android:paddingBottom="5dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/horizonal_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#b0b0b0"
        android:layout_below="@+id/message_value"
        ></View>

    <Button
        android:id="@+id/details_button"
        style="?android:attr/buttonStyleSmall"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textStyle="italic"
        android:layout_alignTop="@+id/horizonal_line_1"
        android:layout_alignRight="@+id/horizonal_line_1"
        android:layout_alignEnd="@+id/horizonal_line_1"
        android:layout_alignBottom="@+id/confirm_button" />

    <View
        android:id="@+id/button_seperator"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:background="#b0b0b0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignTop="@+id/details_button"
        android:layout_alignBottom="@+id/details_button"
        android:layout_toLeftOf="@+id/details_button"/>

    <Button
        android:id="@+id/confirm_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="Confirm"
        android:textStyle="italic"
        android:layout_below="@+id/horizonal_line_1"
        android:layout_toLeftOf="@+id/button_seperator" />

    <View
        android:id="@+id/button_seperator_2"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#b0b0b0"
        android:layout_alignTop="@+id/confirm_button"
        android:layout_alignBottom="@+id/confirm_button"
        android:layout_toLeftOf="@+id/confirm_button"/>


    <LinearLayout
        android:id="@+id/info_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_toLeftOf="@id/button_seperator_2"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizonal_line_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="3dp"
        android:paddingRight="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="question mark"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/change_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/change_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# (#)"
                android:textStyle="italic"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/time_value"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:35  Apr 19, 1993"
        android:textColor="#00b0b0"
        android:layout_alignBottom="@+id/topic_value"
        android:layout_alignRight="@+id/horizonal_line_1"
        android:layout_alignEnd="@+id/horizonal_line_1" />


</RelativeLayout>