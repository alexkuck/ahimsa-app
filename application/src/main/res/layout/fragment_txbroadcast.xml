<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.ahimsa.ahimsa_app.application.MainActivity$PlaceholderFragment"
    android:clickable="false">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NodeService"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleNodeService"
        android:id="@+id/toggleButton"
        android:checked="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testnet"
        android:id="@+id/testnet"
        android:layout_alignBottom="@+id/toggleButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />


    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/toggleButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/messageText"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:hint="Message"
        android:minLines="8"
        android:maxLines="8"/>
        <!--android:maxLength="140"/>-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputPrivateKey"
        android:layout_below="@+id/messageText"
        android:layout_centerHorizontal="true"
        android:hint="Private Key"
        android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputTxid"
        android:layout_below="@+id/inputPrivateKey"
        android:layout_centerHorizontal="true"
        android:hint="Input Txid"
        android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputVout"
        android:layout_below="@+id/inputTxid"
        android:hint="Vout"
        android:layout_toLeftOf="@+id/space"
        android:singleLine="true"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputBTC"
        android:layout_below="@+id/inputTxid"
        android:hint="BTC"
        android:layout_toRightOf="@+id/space"
        android:singleLine="true"
        android:inputType="number"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast Message"
        android:id="@+id/broadcastButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PeerCount"
        android:id="@+id/peerCount"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
