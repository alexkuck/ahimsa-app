<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="io.ahimsa.ahimsa_app.application.ui.ImportFundingTxFragment">

    <EditText
        android:id="@+id/heightOfBlockEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Height of Block"
        android:singleLine="true"
        android:inputType="number"
        />

    <Button
        android:id="@+id/importButton"
        android:text="Import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heightOfBlockEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Height of Local Chain:"
        android:id="@+id/height_of_local_chain"
        android:layout_below="@+id/importButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:id="@+id/heightText"
        android:layout_below="@+id/height_of_local_chain"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hash of Local Chain Head:"
        android:id="@+id/hash_of_chain_head"
        android:layout_below="@+id/heightText"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:id="@+id/chainHeadHashText"
        android:layout_below="@+id/hash_of_chain_head"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>


</RelativeLayout>
